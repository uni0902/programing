/* 整体容器 */
.container{
  padding: 15rpx;
  text-align: center;
  background-color: bisque;
}

.notice {
  box-sizing: border-box;
  position: fixed;
  display: flex;
  width: 100%;
  height: 80%;
  left: 0;
  top: 0;
  font-size: 28rpx;
  flex-direction: column;
  z-index: 999;
}

.notice image{
  box-sizing: border-box;
  position: fixed;
  display: flex;
  width: 100%;
  height: 51%;
  font-size: 28rpx;
  z-index: 999;
}

.notice button{
  z-index: 999;
  margin-top: 100%;
}

/* 新闻标题 */
.title{
  font-size: 14pt;
  line-height: 80rpx;
}
/* 新闻图片 */
.poster image{
  width: 100%;
}
/* 新闻正文 */
.content{
  text-align: left;
  font-size: 12pt;
  line-height: 60rpx;
}

.replyinfo2{ 
  display: flex;
  justify-content: space-between; /*两端对齐*/
}

.release .submit {
  width: 360rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  color: black;
  margin: 0 3px;
  padding: 0;
}

.release {
  align-items: flex-end; /*底部对齐*/
  box-sizing: border-box;
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 15rpx 0 7rpx 7rpx;
  background-color: #f7f8f7;
  font-size: 28rpx;
  z-index: 999;
}

/* 新闻日期 */
.add_date{
  font-size: 12pt;
  text-align: right;
  line-height: 30rpx;
  margin-right: 25rpx;
  margin-top: 20rpx;
}
/* 单击收藏按钮 */
button{
  width: 250rpx;
  height: 100rpx;
  margin: 20rpx auto;
  margin-top: 40rpx;
  background: linear-gradient(#ccefff, #ccefff);
}
/* 评论 */
.comment{
  text-align: right;
  font-size: 12pt;
  line-height: 60rpx;
}

.title{
  margin-top: 8px;
  margin-left: 10px;
  margin-bottom: 8px;
  color: #444;
  font-weight: bold;
  font-size: 20px;
}

.confirm{
  width: 325rpx;
  height: 80rpx;
  background: #07c160;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  
 }
 .bubble{ 
  position: relative;
  overflow: hidden;
 }
 .bubble:after{
  content: "";
  background: #999;
  position: absolute; 
  width: 750rpx;
  height: 750rpx;
  left: calc(50% - 375rpx);
  top: calc(50% - 375rpx);
  opacity: 0;
  margin: auto;
  border-radius: 50%;
  transform: scale(1);
  transition: all 0.4s ease-in-out;
 }
 .bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
 }
