/*评论列表区域样式*/
/*1-1 新闻评论容器*/
#comments-list{
  min-height: 600rpx;
  padding: 15rpx;
}
/*1-2 列表项目*/
.list-item{
  display:flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}
/*1-3 评论图片*/
.list-item image{
  width: 230rpx;
  height: 150rpx;
  margin: 10rpx;
}
/*2-1 用户评论容器*/

.replyinfo2{ 
  display: flex;
  justify-content: space-between; /*两端对齐*/
}

.release textarea {
  width: 525rpx;
  min-height: 34rpx;
  max-height: 204rpx; /*最多显示三行*/
  border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
  border-style: solid;
  border-color: #fff;
  line-height: 34rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 4rpx;
}

.add_date{
  font-size: 12pt;
  text-align: right;
  line-height: 30rpx;
  margin-right: 25rpx;
  margin-top: 20rpx;
}

.title{
  margin-top: 8px;
  margin-left: 10px;
  margin-bottom: 8px;
  color: #444;
  font-weight: bold;
  font-size: 20px;
}

.release .submit {
  width: 145rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  color: #6c0;
  margin: 0 3px;
  padding: 0;
}

.release {
  align-items: flex-end; /*底部对齐*/
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 18rpx 0 18rpx 30rpx;
  background-color: #f7f8f7;
  font-size: 28rpx;
  z-index: 999;
}



.pro-con{
  padding: 20rpx;
  background: #f1f1f1;
  background-color:#64c8fa;
  width: 100%;
}

.pro-box{
	background: #fff;
	padding: 20rpx;
	box-sizing: border-box;
	border-radius: 10rpx;
	margin-bottom: 20rpx;
}

.pro-box .img{
	display: inline-block;
	vertical-align: top;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 10rpx;
}

.background {
  width: 100vw;
  height: 100vh;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.pro-box .addr-info{
	align-items: center;
	justify-content: space-between;
	border-bottom: 1px dashed #ccc;
	margin: 0 -20rpx;
	margin-bottom: 20rpx;
	padding-bottom: 20rpx;
	padding-left: 20rpx;
	padding-right: 20rpx;
  display: inline-block;
}
 
.pro-box .addr-info .addr-text{
	font-size: 35rpx;
  line-height: 40rpx;
  width:100%;
}



.container{
  padding: 15rpx;
  text-align: center;
  background-color:#64c8fa; 
  height: auto;
  padding-top: 32rpx;
  text-align: center;
}

.show{
  background-color: #f1f1f1;
  border-image-outset: initial;
  height: auto;
}

button{
  width: 250rpx;
  height: 100rpx;
  margin: 20rpx auto;
  margin-top: 40rpx;
  background: linear-gradient(#ccefff, #ccefff);
}
